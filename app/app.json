{
  "expo": {
    "name": "microwizards",
    "slug": "microwizards",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Este app precisa de acesso à câmera para capturar imagens.",
        "NSPhotoLibraryUsageDescription": "Este app precisa de acesso à galeria para salvar imagens.",
        "NSPhotoLibraryAddUsageDescription": "Este app precisa de permissão para salvar fotos na galeria."
      }
    },
    "android": {
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "ACCESS_WIFI_STATE",
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "SYSTEM_ALERT_WINDOW",
        "VIBRATE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ],
      "usesCleartextTraffic": true,
      "networkSecurityConfig": "./network_security_config.xml",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.microwizards.app"
    },
    "web": {
      "favicon": "./assets/logo.png"
    },
    "plugins": [
      "expo-video",
      [
        "expo-file-system",
        {
          "photosPermission": "Permitir que $(PRODUCT_NAME) acesse suas fotos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "f90ac7c4-1bad-4635-b83f-16ff65d613e6"
      }
    }
  }
}
